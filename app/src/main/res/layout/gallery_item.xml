<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    >

    <ImageView
        android:id="@+id/fragment_gallery_image_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        android:layout_gravity="right|top"
        android:background="@drawable/custom_checkbox"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_gallery_image_view"
        app:layout_constraintEnd_toEndOf="@+id/fragment_gallery_image_view"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_gallery_image_view"
        app:layout_constraintVertical_bias="0.223" />

</FrameLayout>